<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_tree_repair_component" model="ir.ui.view">
        <field name="name">Repair Component Tree view</field>
        <field name="model">repair.component</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code" />
                <field name="name" />
            </tree>
        </field>
    </record>
    <record id="view_form_repair_component" model="ir.ui.view">
        <field name="name">Repair Component Form View</field>
        <field name="model">repair.component</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                        <label for="code" class="oe_edit_only"/>
                        <field name="code" />
                        </h1>
                    </div>
                    <group>
                        <field name="name" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
